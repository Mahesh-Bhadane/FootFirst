    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.4",
    "@types/react": "18.2.18",
    "@types/react-dom": "18.2.7",
    "@types/swagger-ui-react": "^4.18.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "autoprefixer": "^10.4.14",
    "drizzle-kit": "^0.19.11",
    "eslint": "^8.46.0",
    "eslint-config-next": "13.4.12",
    "eslint-plugin-storybook": "^0.6.13",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^29.6.4",
    "lint-staged": "^12.2.0",
    "postcss": "^8.4.27",
    "prettier": "^2.8.8",
    "storybook": "^7.4.0",
    "tailwindcss": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run type-check",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "npm run prettier",
      "npm run test",
      "git add"
    ],
    "**/*.{json,css,scss,md}": [
      "npm run prettier",
      "git add"
    ]
  }
